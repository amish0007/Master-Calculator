<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MutualFundActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/lnrEmiBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/transperent_shape"
            android:gravity="center">
            <ImageView
                android:gravity="center"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:background="@drawable/back_arrow"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="EMI Calculator"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Loan Amount"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/transperent_rect"
            android:layout_marginLeft="45dp">
            <EditText
                android:id="@+id/edtEmiAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:hint="Amount"
                android:inputType="number"
                android:paddingLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Interest Rate in(%)"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/transperent_rect"
            android:layout_marginLeft="13dp">
            <EditText
                android:id="@+id/edtEmiInterest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:hint="Interest"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Time Period in "
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edtEmiTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/transperent_rect"
            android:hint="Time"
            android:textColor="@color/black"
            android:inputType="time"
            android:layout_weight="1"
            android:autofillHints="creditCardExpirationYear"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/txtEmiYears"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Years"
            android:layout_weight="1.2"
            android:drawableRight="@drawable/clickdown"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:background="@drawable/rectbtn"
        android:layout_marginTop="40dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/txtEmiCalculator"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Calculate"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interest Amount"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/txtAnsIntAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="---"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Interest"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/txtAnsTotInterest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="---"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Payable Amount"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/txtAnsTotPayAmoount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    </LinearLayout>

</LinearLayout>